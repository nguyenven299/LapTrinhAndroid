<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4DFED">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/logo_gdu"
    android:layout_gravity="center_horizontal"
    ></ImageView>
    <TextView
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp90"
        android:textColor="@color/cardview_dark_background"

        android:textSize="@dimen/dp25"
        android:text="Nhập Mã Xác Thực"
        ></TextView>
    <EditText

        android:id="@+id/edtiTextVerify"
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"

        android:background="#FFF"
        android:hint="Mã Xác Thực"
        android:minHeight="@dimen/dp25"
        android:layout_marginTop="@dimen/dp10"
        android:paddingHorizontal="@dimen/dp30"
        android:paddingVertical="@dimen/dp10"
        android:textSize="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp90"
        ></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Thực"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/dp10"
            android:textSize="@dimen/dp20"
            android:background="#18E712"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lấy Lại Mã Xác Thực"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/dp10"
            android:textSize="@dimen/dp20"
            android:background="#D8599C"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp70"
            ></Button>
    </LinearLayout>
</LinearLayout>